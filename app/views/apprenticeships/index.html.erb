<h1>Listing apprenticeships</h1>

<table>
  <thead>
    <tr>
      <th>Teacher</th>
      <th>Student</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @apprenticeships.each do |apprenticeship| %>
      <tr>
        <td><%= apprenticeship.teacher.name %></td>
        <td><%= apprenticeship.student.name %></td>
        <td><%= link_to 'Show', apprenticeship %></td>
        <td><%= link_to 'Edit', edit_apprenticeship_path(apprenticeship) %></td>
        <td><%= link_to 'Destroy', apprenticeship, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Apprenticeship', new_apprenticeship_path %>
<%= link_to 'New Teacher', new_teacher_path %>
<%= link_to 'New Student', new_student_path %>